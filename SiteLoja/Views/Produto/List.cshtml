@model IEnumerable<SiteLoja.Models.Produto>

@{
    ViewBag.Title = "Lista de Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listar pordutos cadastrado</h2>
<br />
<p>
    @Html.ActionLink("Cadastrar produto", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDCategoia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecoAtual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagemUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagemThumbnaiUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoupaDaSemana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmEstoque)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCategoia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoAtual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemThumbnaiUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoupaDaSemana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmEstoque)
            </td>
            <td>
                <a href="/Produto/Edit/@item.ID" data-toggle="tooltip" title="Alterar!"><i class="fas fa-edit"></i></a>
                <a href="/Produto/Delete/@item.ID" data-toggle="tooltip" title="Excluir" onclick="return confirm('Tem Certeza?');"><i class="fas fa-trash-alt"></i></a>
                <a href="/Produto/Details/@item.ID" data-toggle="tooltip" title="Abrir"><i class="far fa-eye"></i></a>
            </td>
        </tr>
    }

</table>
<h6>@ViewBag.Total @ViewBag.TotalProdutos</h6>
<hr />
<h6>@ViewData["Data"]</h6>
<hr />